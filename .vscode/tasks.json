{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C: build active file",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "C: run active file",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "& \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "dependsOn": "C: build active file",
      "problemMatcher": []
    }
  ]
}
